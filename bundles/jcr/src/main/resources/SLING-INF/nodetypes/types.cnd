<sakai = 'http://www.sakaiproject.org/nakamura/2.0'>
<nt  = 'http://www.jcp.org/jcr/nt/1.0'>

// Add a mixin that allows nodes to accept other properties, (eg nt:file)
[sakai:propertiesmix] > mix:versionable mixin

  - '*' (undefined)
    copy
    multiple
    
  - '*' (undefined)
    copy

  + '*' (nt:unstructured)
  
// Node type for the Site objects
[sakai:site] > nt:unstructured

// Node type for files
[sakai:file] > nt:file, sakai:propertiesmix

// Node type for the members node
[sakai:pooledcontentmembers] > nt:unstructured
- sakai:managers (string) multiple mandatory
- sakai:viewers (string) multiple mandatory

// Node type for pooled content
// A ppoled content node has a sling:resourceType and a childnode 'members'
// of type sakai:pooledcontentmembers
[sakai:pooledcontent] > nt:file, sakai:propertiesmix
- sling:resourceType (string)
  = 'sakai/pooled-content'
  autocreated mandatory
+ members 
  = sakai:pooledcontentmembers
  mandatory

